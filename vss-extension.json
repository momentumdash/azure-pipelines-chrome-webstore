{
	"manifestVersion": 1,
	"id": "azure-pipelines-chrome-webstore",
	"name": "Chrome Web Store Tools",
	"version": "0.1.28",
	"publisher": "momentumdash",
	"public": false,
	"targets": [
		{
			"id": "Microsoft.VisualStudio.Services"
		}
	],
	"description": "Distribute your Web Extension to the Google Chrome Web Store via the Chrome Web Store API.",
	"categories": [
		"Azure Pipelines"
	],
	"icons": {
		"default": "images/chrome-web-store-icon.png"
	},
	"repository": {
		"type": "git",
		"uri": "https://github.com/momentumdash/azure-pipelines-chrome-webstore"
	},
	"content": {
		"details": {
			"path": "README.md"
		},
		"license": {
			"path": "LICENSE"
		}
	},
	"files": [
		{
			"path": "GetStatus"
		},
		{
			"path": "UpdateItem"
		},
		{
			"path": "PublishItem"
		}
	],
	"contributions": [
		{
			"id": "chrome-webstore-get-status",
			"description": "Check status of an item on Chrome Web Store",
			"type": "ms.vss-distributed-task.task",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"properties": {
				"name": "GetStatus"
			}
		},
		{
			"id": "chrome-webstore-update-item",
			"description": "Upload a package to update an existing store item",
			"type": "ms.vss-distributed-task.task",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"properties": {
				"name": "UpdateItem"
			}
		},
		{
			"id": "chrome-webstore-publish-item",
			"description": "Publish a package on Chrome Web Store",
			"type": "ms.vss-distributed-task.task",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"properties": {
				"name": "PublishItem"
			}
		}
	],
	"tags": [
		"Chrome",
		"Google Chrome",
		"Web Extension",
		"WebExtensions",
		"Chrome Extension",
		"Chrome Web Store",
		"Chrome Web Store API",
		"Deploy task"
	]
}
